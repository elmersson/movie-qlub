{
  "name": "server",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "tsdown",
    "check-types": "tsc -b",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "dev": "bun run --hot src/index.ts",
    "start": "bun run dist/index.js"
  },
  "dependencies": {
    "express": "^5.1.0",
    "cors": "^2.8.5",
    "better-auth": "catalog:",
    "dotenv": "catalog:",
    "zod": "^4.1.11",
    "@movie-qlub/auth": "workspace:*",
    "@movie-qlub/db": "workspace:*"
  },
  "devDependencies": {
    "typescript": "^5.8.2",
    "@types/express": "^5.0.1",
    "@types/cors": "^2.8.17",
    "@types/bun": "^1.2.6",
    "tsdown": "^0.16.5",
    "@movie-qlub/config": "workspace:*"
  }
}
